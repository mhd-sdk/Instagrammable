# Docker Environment Configuration
# Copy this file to .env and modify as needed
# Used by docker-compose.yml for service configuration

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=automaker

# Database port mapping (host:container)
# Change if port 5432 is already in use
DB_PORT=5432

# Database URL (for application - uses Docker service name)
DATABASE_URL=postgresql://postgres:postgres@db:5432/automaker

# ============================================
# Redis Configuration
# ============================================
# Redis port mapping (host:container)
# Change if port 6379 is already in use
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# ============================================
# Application Configuration
# ============================================
# Application port
APP_PORT=3000


# Environment Configuration
# Copy this file to .env and fill in the values
# For Docker development, see .env.docker for Docker-specific defaults

# ============================================
# Database Configuration
# ============================================
# For local development with Docker:
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/automaker"

# For running app inside Docker (use service name):
# DATABASE_URL="postgresql://postgres:postgres@db:5432/automaker"

# ============================================
# Authentication
# ============================================
BETTER_AUTH_SECRET="your-secret-key-here"

# Google OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Instagram OAuth (optional)
# Get these from Facebook Developer Console -> Your App -> Instagram Platform API
# Note: Only Business/Creator accounts are supported (Personal accounts are not supported)
# Documentation: https://developers.facebook.com/docs/instagram-platform/
INSTAGRAM_CLIENT_ID=""
INSTAGRAM_CLIENT_SECRET=""
# The redirect URI configured in Facebook Developer Console (must match exactly)
# Format: {your_domain}/api/instagram/callback
INSTAGRAM_REDIRECT_URI="http://localhost:3000/api/instagram/callback"

# Public Instagram Client ID (same as INSTAGRAM_CLIENT_ID, exposed to frontend for OAuth URL)
VITE_INSTAGRAM_CLIENT_ID=""

# Google Gemini API (for Vision API)
GOOGLE_GEMINI_API_KEY=""


# ============================================
# Vite Public Environment Variables
# (accessible in frontend code)
# ============================================
VITE_BETTER_AUTH_URL="http://localhost:3000"

# ============================================
# Docker Port Configuration (optional)
# Change these if default ports conflict
# ============================================
# DB_PORT=5432
# REDIS_PORT=6379
# APP_PORT=3000
# ADMINER_PORT=8080
# REDIS_COMMANDER_PORT=8081
# MAILHOG_SMTP_PORT=1025
# MAILHOG_UI_PORT=8025
